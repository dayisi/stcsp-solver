var GAMEOVER : {0, 1};

first D0 == -1;
first D1 == -1;
first D2 == -1;
first D3 == -1;
first D4 == -1;
D5 == 0 fby 1 fby 2 fby 3 fby 4 fby 5 fby 6 fby D5;
A0 == I eq D0;
A1 == I ne D0 and I eq D1;
